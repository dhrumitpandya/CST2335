<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dhrumitpandya.lab1.WeatherForecast">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/currentTextView"
        android:id="@+id/currentTextView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/weatherImageView"
        android:layout_alignStart="@+id/weatherImageView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/minTextView"
        android:id="@+id/minTextView"
        android:layout_below="@+id/currentTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/maxTextView"
        android:id="@+id/maxTextView"
        android:layout_below="@+id/minTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normProgBar"
        android:layout_below="@+id/maxTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:visibility="invisible"
        />

</RelativeLayout>
